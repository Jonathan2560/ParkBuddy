<% content_for :meta_title, "Checkout" %>
<% content_for :meta_description, "Make your payment on the checkout page." %>

<div class="container">
  <div class="row py-4 text-center center-margin">
    <div class="col">
      <h1>Checkout</h1>
      <p>Purchase of parking @<strong><%= @order.reservation.garage.address %></strong> from <strong><%= @order.reservation.from.strftime("%H:%M %d/%m/%Y") %></strong>, until <strong><%= @order.reservation.until.strftime("%H:%M %d/%m/%Y") %></strong> for <strong><%= humanized_money_with_symbol @order.amount %></strong>.</p>
      <button id="pay" class="btn button-payment">Pay <%= humanized_money_with_symbol @order.amount %></button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @order.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</div>
